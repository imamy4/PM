@model УправлениеПроектами.Models.КлассыДляФормВвода.ДанныеВходаВСистему

@{
    ViewBag.Title = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Вход</h2>

@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="Email">
                Email
            </label>
            <div class="controls">
                @Html.TextBox("Email", Model.Email, new { @class = "input-xlarge" })
                <p class="help-block">Введите Email</p>
                @Html.ValidationMessage("Email")
            </div>

        </div>
        <div class="control-group">
            <label class="control-label" for="Password">
                Пароль
            </label>
            <div class="controls">
                @Html.Password("Пароль", Model.Пароль, new { @class = "input-xlarge" })
                @Html.ValidationMessage("Пароль")
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Войти
            </button>
        </div>
    </fieldset>
}
