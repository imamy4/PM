@using МенеджерБД.Домен;

@model Требование

@{
    ViewBag.Title = @Model == null ? "Ошибочка" : "Требование: " + @Model.Название;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row-fluid">
        <div class="span3">
            <div class="well sidebar-nav" style="margin-top: 45px; text-align:start">
                <p>
                    <span class="btn btn-large">@Html.ActionLink("К списку »", "Index")</span>
                </p>
                <p>
                    <span class="btn btn-large">@Html.ActionLink("Новое требование »", "Create")</span>
                </p>
            </div>
        </div>

        <div class="span9">
            <div class="hero-unit" style="margin-top:45px">
                @if (Model != null)
                {
                    <h2>@Model.Название</h2>

                    <p>
                        @Model.Описание
                    </p>
                    
                    <ul>
                        <li>Оценка: @Model.Оценка</li>
                        <li>Важность: @Model.Важность</li>
                        <li>Автор: @Model.Автор.Имя</li>
                    </ul>
                    
                }
                else
                {
                    <h2>Извините, по данному запросу не найдено требования.</h2>
                }
            </div>
        </div>
    </div>
</div>
