@using УправлениеПроектами;
@model МенеджерБД.Домен.Требование

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Страница требования: @Model.Название</title>

    <!--подключение ExtJS------------------------------------------>
    <link href="/Scripts/ExtJS/resources/css/ext-neptune.css" rel="stylesheet">
    <script src="/Scripts/ExtJS/ext-all-debug.js" type="text/javascript"></script>
    <script src="/Scripts/ExtJS/locale/ext-lang-ru.js" type="text/javascript"></script>
</head>
<body link="black" vlink="black" alink="#303030">
    <div>
        <div class="container">
            <div id="desktop">
            </div>
        </div>


        <script type="text/javascript">
            var userStoryId = @Model.Id;
            var defaultValues = {
                projectId: @Model.Проект.Id,
                name: "@Model.Название",
                description: "@Model.Описание",
                categoryId: 0,
                estimate: @Model.Оценка.ToString().Replace(',', '.'),
                importance: @Model.Важность,
                statusId: @Model.Статус.Id,
                statusName: "@Model.Статус.Название",
                executorId: 0,
                executorName: "",
                authorId: "@Model.Автор.Id",
                authorName: "@Model.Автор.ФИО",
            };
        </script>
        @if (@Model.Исполнитель() != null)
        {
            <script type="text/javascript">
                defaultValues.executorId =@Model.Исполнитель().Id;
                defaultValues.executorName = "@Model.Исполнитель().ФИО";
            </script>
        }
        @if (@Model.Категория != null)
        {
            <script type="text/javascript">
                defaultValues.categoryId = @Model.Категория.Id;
            </script>
        }


        <script src="/Scripts/CustomScripts/main-menu-panel.js" type="text/javascript"></script>
        <script src="/Scripts/CustomScripts/user-desktop-grids.js" type="text/javascript"></script>
        <script src="/Scripts/CustomScripts/win-create-user-story.js" type="text/javascript"></script>
        <script src="/Scripts/CustomScripts/user-story-desktop.js" type="text/javascript"></script>
    </div>
</body>
</html>
