@model МенеджерБД.Домен.Спринт

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@string.Format("Страница спринта \"{0}\"", Model.Название)</title>

    <!--подключение ExtJS------------------------------------------>
    <link href="/Scripts/ExtJS/resources/css/ext-all.css" rel="stylesheet">
    <script src="/Scripts/ExtJS/ext-all-debug.js" type="text/javascript"></script>
    <script src="/Scripts/ExtJS/locale/ext-lang-ru.js" type="text/javascript"></script>
</head>
<body>
    <div class="container">
        <div id="desktop" class="hero-unit" style="margin-top:45px; padding: 0px">
        </div>
    </div>

    <script type="text/javascript">var projectId = @Model.Проект.Id;</script>
    <script type="text/javascript">var sprintId = @Model.Id;</script>
    <script src="/Scripts/CustomScripts/grid-backlog.js" type="text/javascript"></script>
    <script src="/Scripts/CustomScripts/grid-sprints.js" type="text/javascript"></script>
    <script src="/Scripts/CustomScripts/grid-user-stories.js" type="text/javascript"></script>
    <script src="/Scripts/CustomScripts/win-create-user-story.js" type="text/javascript"></script>
    <script src="/Scripts/CustomScripts/win-create-sprint.js" type="text/javascript"></script>
    <script>
        Ext.onReady(function () {
            var mainWidth = Ext.get('desktop').getWidth();

            Ext.create('Ext.Viewport', {
                renderTo: 'desktop',
                width: mainWidth,
                border: false,
                bodyStyle: 'background:transparent;',
                layout: 'border',
                items: [GetUserStoriesGrid(sprintId)]
            });
        });
    </script>
</body>
</html>
