@model УправлениеПроектами.Models.КлассыДляФормВвода.ПроектДляФормы

@{
    ViewBag.Title = "Создание проекта";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class=" hero-unit" style="margin-top:45px">
        <h2>Создание проекта</h2>
        @using (Html.BeginForm("Create", "Projects", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <fieldset>
                <div class="control-group">
                    <label class="control-label" for="Email">
                        Введите наименование
                    </label>
                    <div class="controls">
                        @Html.ValidationMessage("Название")
                        @Html.TextBox("Название", Model.Название)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Password">
                        Введите описание
                    </label>
                    <div class="controls">
                        @Html.ValidationMessage("Описание")
                        @Html.TextArea("Описание", Model.Описание)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Name">
                        Введите дату начала проекта
                    </label>
                    <div class="controls">
                        @Html.ValidationMessage("ДатаНачала")
                        @Html.DropDownList("ДеньДатаНачала", Model.ДеньДатаКонцаSelectList)
                        @Html.DropDownList("МесяцДатаНачала", Model.МесяцДатаНачалаSelectList)
                        @Html.DropDownList("ГодДатаНачала", Model.ГодДатаНачалаSelectList)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Surname">
                        Введите дату окончания проект
                    </label>
                    <div class="controls">
                        @Html.ValidationMessage("ДатаКонца")
                        @Html.DropDownList("ДеньДатаКонца", Model.ДеньДатаКонцаSelectList)
                        @Html.DropDownList("МесяцДатаКонца", Model.МесяцДатаКонцаSelectList)
                        @Html.DropDownList("ГодДатаКонца", Model.ГодДатаКонцаSelectList)
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        Содать новый проект
                    </button>
                    @Html.ActionLink("Отмена", "Index", "Projects", null, new { @class = "btn" })
                </div>
            </fieldset>
        }
    </div>
</div>
